<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/space_normal"
        android:text="春节"
        android:textColor="@android:color/holo_red_light"
        android:textSize="@dimen/text_size_large_2"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/space_normal"
        android:layout_toEndOf="@id/title"
        android:layout_toRightOf="@id/title"
        android:text="还有"
        android:textColor="@color/title_grey_22"
        android:textSize="@dimen/text_size_large_1" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/space_normal"
        android:layout_toEndOf="@id/desc"
        android:layout_toRightOf="@id/desc"
        android:background="@drawable/shape_stroke"
        android:paddingBottom="@dimen/space_small_2"
        android:paddingLeft="@dimen/space_small_1"
        android:paddingRight="@dimen/space_small_1"
        android:paddingTop="@dimen/space_small_2"
        android:text="8"
        android:textColor="@color/title_grey_22"
        android:textSize="@dimen/text_size_large_2" />

    <TextView
        android:id="@+id/unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/space_normal"
        android:layout_toEndOf="@id/time"
        android:layout_toRightOf="@id/time"
        android:text="天"
        android:textColor="@color/title_grey_22"
        android:textSize="@dimen/text_size_large_1" />

    <ImageView
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_above="@id/target"
        android:layout_alignParentBottom="true"
        android:background="@color/divider_grey_85" />

    <TextView
        android:id="@+id/target"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="2018 - 1 - 1"
        android:textSize="@dimen/text_size_small_3" />
</RelativeLayout>