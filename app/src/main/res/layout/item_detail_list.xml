<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_small_1"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="@dimen/space_small_2"
    tools:ignore="RtlHardcoded">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item_transparent"
        android:clickable="true">

        <ImageView
            android:id="@+id/divider"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@android:color/holo_red_light" />

        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_toRightOf="@id/divider">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_normal"
                android:text="春节"
                android:textColor="@color/title_grey_22"
                android:textSize="@dimen/text_size_large_2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_normal"
                android:layout_toEndOf="@id/title"
                android:layout_toRightOf="@id/title"
                android:text="还有"
                android:textColor="@color/title_grey_22"
                android:textSize="@dimen/text_size_large_1" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_normal"
                android:layout_toEndOf="@id/desc"
                android:layout_toRightOf="@id/desc"
                android:text="8"
                android:textColor="@color/title_grey_22"
                android:textSize="@dimen/text_size_large_2" />

            <TextView
                android:id="@+id/tian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_normal"
                android:layout_toEndOf="@id/time"
                android:layout_toRightOf="@id/time"
                android:text="天"
                android:textColor="@color/title_grey_22"
                android:textSize="@dimen/text_size_large_1" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_below="@id/content"
            android:layout_toRightOf="@id/divider"
            android:background="@color/divider_grey_85" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider1"
            android:layout_toRightOf="@id/divider"
            android:gravity="center"
            android:text="2018 - 1 - 1"
            android:textSize="@dimen/text_size_small_3" />
    </RelativeLayout>

</android.support.v7.widget.CardView>